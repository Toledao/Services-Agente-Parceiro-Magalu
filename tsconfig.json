{
  "compilerOptions": {
    "target": "es2017",                                  
    "lib": ["es6"],                                        
    "module": "commonjs",                                
    "outDir": "./dist",                                  
    "rootDir": "./src",                                  
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "resolveJsonModule": true,   
    "allowJs": true,                  
    "removeComments": true,    
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "skipLibCheck": true,                                 
    "baseUrl": ".",
    "paths": {
      "@providers/*": ["./src/providers/*"],
      "@repositories/*": ["./src/repositories/*"],
      "@usecases/*": ["./src/usecases/*"],
      "@entities/*": ["./src/entities/*"]
    }
  }
}
